<%= form_for :session, url: session_path do |form| %>
  <div class="container">
    <div class="row">
      <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
        <div class="card card-signin my-5">
          <div class="card-body">
            <h5 class="card-title text-center">Sign In</h5>
            <form class="form-signin">
              <div class="form-label-group">
                <%= form.text_field :email, type: 'email', class:"form-control" %>
                <%= form.label :email %>
              </div>
              <div class="form-label-group">
                <%= form.password_field :password, class:"form-control" %>
                <%= form.label :password %>
              </div>
              <div class="custom-control custom-checkbox mb-3">
                <input type="checkbox" class="custom-control-input" id="customCheck1">
                <label class="custom-control-label" for="customCheck1">Remember password</label>
              </div>
              <%= form.submit class:"btn btn-lg btn-primary btn-block text-uppercase" %>
              <hr class="my-4">
              <% if Clearance.configuration.allow_sign_up? %>
                <%= link_to t(".sign_up"), sign_up_path, class:"m-1 btn btn-lg btn-google btn-block text-uppercase" %>
              <% end %>
              <%= link_to t(".forgot_password"), new_password_path, class:"btn btn-lg btn-facebook btn-block text-uppercase" %>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
<%end%>
