<%= link_to "Add Worker", new_worker_path%>
<h1>Workers</h1>
<% @workers.each do |worker| %>
  <div class="well">
    <h2><%= worker.name %></h2>
    <h4><%= worker.gender %></h4>
    <h5><%= worker.role %></h5>
    <h5><%= worker.wage %></h5>
    <%= link_to "Details", worker_path(worker), class: 'btn'%>
  </div>
<% end %>
