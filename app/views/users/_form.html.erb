<div class="container">
  <div class="row">
    <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
      <div class="card card-signin my-5">
        <div class="card-body">
          <h5 class="card-title text-center">Sign In</h5>
          <form class="form-signin">
            <div class="form-label-group">
              <%= form.text_field :email, type: 'email', class:"form-control" %>
              <%= form.label :email %>
            </div>
            <div class="form-label-group">
              <%= form.password_field :password, class:"form-control" %>
              <%= form.label :password %>
            </div>
            <%= form.submit class:"btn btn-lg btn-primary btn-block text-uppercase" %>
            <hr class="my-4">
            <%= link_to t(".sign_in"), sign_in_path, class:"btn btn-lg btn-facebook btn-block text-uppercase" %>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
